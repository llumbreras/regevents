<div>
<%= form_for(@event) do |f| %>
<%= render 'shared/errors' %>
<br />
<p><%= f.label :name %><br />
	<%= f.text_field :name, autofocus: true %>
</p>
<p>
	<%= f.label :description %><br />
	<%= f.text_area :description, rows: 5, columns:25 %>
</p>
<p>
	<%= f.label :starts_at %><br />
	<%= f.datetime_select :starts_at %>
</p>
<p>
	<%= f.label :location %><br />
	<%= f.text_field :location %>
</p>
<p>
	<%= f.label :image_file_name %>
	<%= f.text_field :image_file_name,
		placeholder: "jpg, gif, or png file" %>
</p>
<p>
	<%= f.label :capacity %>
	<%= f.number_field :capacity %>
</p>

<p>
	<%= f.label :price %><br />
	<%= f.number_field :price %>
</p>
<%= f.submit "Create Event", class:"btn" %> <%= link_to "Cancel", events_path, class:"btn" %>

<% end %>
</div>