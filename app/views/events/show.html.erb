<h1>Event Detail</h1>
 
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<article>
	<header>
		<%= image_helper(@event) %>
		<h2><%= @event.name %></h2>
		<%= pluralize(@event.spaces_left, 'space') %>
	</header>
	<p><%= truncate(@event.description, length: 25, separator: ' ') %></p>
	<table>
		<tr>
			<th>Date</th>
			<td><%= @event.starts_at %></td>
		</tr>
		<tr>
			<th>Location</th>
			<td><%= @event.location %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= format_price(@event) %></td>
		</tr>
	</table>
</article>
<div>
	<%= link_to "Edit Event", edit_event_path(@event) %> | <%= link_to "Back to Index", events_path %>
<div>
	<%= link_to 'Register for the Event', new_event_registration_path(@event), class:"btn btn-info" %> 
</div>