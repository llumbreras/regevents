<h1>Edit</h1>

<%= form_for(@event) do |f| %>
<p><%= f.label :name %><br />
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :description %><br />
	<%= f.text_area :description, rows: 5, columns:25 %>
</p>
<p>
	<%= f.label :starts_at %><br />
	<%= f.datetime_select :starts_at %>
</p>
<p>
	<%= f.label :location %><br />
	<%= f.text_field :location %>
</p>
	<%= f.label :price %><br />
	<%= f.number_field :price %>
</p>
<%= f.submit %>

<% end %>

<br />
<%= link_to 'Back to Event', event_path(@event) %>

