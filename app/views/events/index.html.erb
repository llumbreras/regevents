<h1>Event Listing</h1>

<% if flash[:alert] %>
Action taken:<%= flash[:alert] %>
<% end %>
<br />
This listing is generated on <%= Time.now %>. There are currently <%= pluralize(@events.size, 'event') %>.

<% @events.each do |event| %>
<article>
	<header>
		<%= image_helper(event) %>
		<h2><%= link_to event.name, event_path(event) %></h2>
		<h3><%= pluralize(event.capacity, "spot") %></h3>
	</header>
	<p><%= truncate(event.description, length: 25, separator: ' ') %></p>
	<table>
		<tr>
			<th>Date</th>
			<td><%= event.starts_at %></td>
		</tr>
		<tr>
			<th>Location</th>
			<td><%= event.location %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= format_price(event) %></td>
		</tr>
	</table>
</article>
<% end %>
